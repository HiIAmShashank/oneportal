{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"],
      "env": ["NODE_ENV"],
      "passThroughEnv": [
        "VITE_*",
        "NODE_ENV"
      ]
    },
    "lint": {
      "cache": true,
      "inputs": ["$TURBO_DEFAULT$", ".eslintrc*", "eslint.config.*"]
    },
    "typecheck": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "tsconfig*.json"]
    },
    "deadcode": {
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", "knip.json"]
    },
    "test": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "vitest.config.*"],
      "outputs": ["coverage/**"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "preview": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["build"]
    }
  },
  "globalEnv": ["NODE_ENV"],
  "globalPassThroughEnv": ["CI"]
}
