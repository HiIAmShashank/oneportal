{
  "name": "one-portal",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "build:deploy": "pnpm build && node scripts/combine-builds.js",
    "preview": "turbo preview",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "deadcode": "knip --no-progress",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo clean && rm -rf node_modules",
    "validate:auth": "node scripts/validate-auth-config.js",
    "swa:start": "swa start dist-deploy --port 4280",
    "docker:build": "pnpm build:deploy && docker-compose build",
    "docker:up": "pnpm build:deploy && docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "audit": "pnpm audit --audit-level=moderate",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@azure/static-web-apps-cli": "^2.0.7",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/node": "^24.6.2",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.37.0",
    "fs-extra": "^11.3.2",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "knip": "^5.65.0",
    "lint-staged": "^15.2.11",
    "prettier": "^3.5.4",
    "turbo": "^2.5.8",
    "typescript": "~5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8"
  },
  "packageManager": "pnpm@10.19.0",
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
