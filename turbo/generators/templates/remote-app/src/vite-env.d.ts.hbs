/// <reference types="vite/client" />

/**
 * Type definitions for Vite environment variables ({{ displayName }})
 *
 * Provides type safety for environment variables used in the {{ displayName }} application.
 * Uses app-specific prefix: VITE_{{ constantCase appName }}_AUTH_*
 */
interface ImportMetaEnv {
  // {{ displayName }} Authentication Configuration
  readonly VITE_{{ constantCase appName }}_AUTH_CLIENT_ID: string;
  readonly VITE_{{ constantCase appName }}_AUTH_AUTHORITY: string;
  readonly VITE_{{ constantCase appName }}_AUTH_REDIRECT_URI: string;
  readonly VITE_{{ constantCase appName }}_AUTH_POST_LOGOUT_REDIRECT_URI?: string;
  readonly VITE_{{ constantCase appName }}_AUTH_SCOPES: string;

  // App Mode (shared across all apps)
  readonly VITE_APP_MODE?: 'auto' | 'standalone' | 'embedded';

  // API Configuration (app-specific)
  readonly VITE_{{ constantCase appName }}_API_BASE_URL?: string;

  // Feature Flags (shared across all apps)
  readonly VITE_ENABLE_ANALYTICS?: string;
  readonly VITE_ENABLE_DEBUG?: string;

  // Vite Standard Variables
  readonly DEV: boolean;
  readonly PROD: boolean;
  readonly MODE: string;
}

interface ImportMeta {
  readonly env: ImportMetaEnv;
}
